<div class='grid'>
  <%= form_with url: distance_locations_path, method: :post, format: :turbo_stream, data: { turbo_frame: "distance_selectors" }, class: 'grid grid-flow-row gap-y-2' do |f| %>
    <div class='flex gap-2'>
      <span class='text-black font-semibold'>Откуда: </span>
      <div class='w-full'>
        <%= f.select :from_id, locations.map { |location| [concat_name_and_coordinates(location), location.id] }, { :include_blank => false }, { :class => 'w-full px-2 py-1 border rounded' } %>
      </div>
    </div>
    <div class='flex gap-2'>
      <span class='text-black font-semibold'>Куда: </span>
      <%= f.select :to_id, locations.map { |location| [concat_name_and_coordinates(location) ,location.id] }, { :include_blank => false }, { :class => 'w-full px-2 py-1 border rounded' } %>
    </div>
    <div>
      <%= f.submit 'Рассчитать', class: 'cursor-pointer bg-gray-500 text-white px-4 py-2 rounded-xl hover:bg-gray-600' %>
    </div>
  <% end %>
</div>
