<div class='flex col-span-12'>
  <%= form_with url: search_locations_path, method: :post, format: :turbo_stream, data: { turbo_frame: "search_result" }, class: "flex gap-2" do |f| %>
    <%= f.text_field :query, placeholder: 'Введите название населенного пункта...', class: 'bg-white w-[512px] border-1 border-gray-500 rounded-xl px-4 py-2', required: true %>
  <%= f.submit 'Найти', class: 'cursor-pointer bg-gray-500 text-white px-4 py-2 rounded-xl hover:bg-gray-600' %>
  <% end %>
</div>
