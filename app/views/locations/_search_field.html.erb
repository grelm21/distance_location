<div class='flex col-span-12'>
  <%= form_with url: search_locations_path, method: :post, format: :turbo_stream, data: { turbo_frame: "search_result" }, class: "flex gap-2" do |f| %>
    <%= f.text_field :query, placeholder: 'Введите название населенного пункта...', class: 'search-field', required: true, autocomplete: 'off' %>
  <%= f.submit 'Найти', class: 'gray-button' %>
  <% end %>
</div>
